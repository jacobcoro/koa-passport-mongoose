{
  "name": "koa-passport-mongoose",
  "version": "1.0.0",
  "description": "A simple Node.js Koa server with password and oAuth login using passport and persisted to MongoDB",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Jewcub/koa-passport-mongoose.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Jewcub/koa-passport-mongoose/issues"
  },
  "homepage": "https://github.com/Jewcub/koa-passport-mongoose#readme",
  "scripts": {
    "clean": "rimraf dist",
    "dev": "run-p watch dev:serve",
    "dev:serve": "node-dev --respawn dist/index.js",
    "serve": "node dist/",
    "watch": "tsc -p src/ -w",
    "build:server": "tsc -p src/",
    "build": "run-s clean build:server",
    "test": "jest"
  },
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "@types/koa-sslify": "^4.0.1",
    "bcrypt-nodejs": "0.0.3",
    "dotenv": "^8.2.0",
    "jsonwebtoken": "^9.0.0",
    "koa": "^2.12.0",
    "koa-bodyparser": "^4.3.0",
    "koa-csrf": "^3.0.8",
    "koa-helmet": "^5.2.0",
    "koa-logger": "^3.2.1",
    "koa-passport": "^4.1.3",
    "koa-response2": "^1.0.4",
    "koa-router": "^8.0.8",
    "koa-session": "^6.0.0",
    "koa-sslify": "^4.0.3",
    "koa-validate": "^1.0.7",
    "lodash": "^4.17.15",
    "mongoose": "^5.9.21",
    "openapi-validator-middleware": "^3.0.0",
    "passport": "^0.4.1",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.10.2",
    "@types/bcrypt-nodejs": "0.0.31",
    "@types/glob": "^7.1.3",
    "@types/jest": "^25.2.3",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/koa": "^2.11.3",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-helmet": "^5.2.0",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-passport": "^4.0.2",
    "@types/koa-router": "^7.4.1",
    "@types/koa-session": "^5.10.2",
    "@types/koa__cors": "^3.0.1",
    "@types/lodash": "^4.14.153",
    "@types/mongoose": "^5.7.29",
    "@types/node": "^14.0.9",
    "@types/passport": "^1.0.3",
    "@types/passport-facebook": "^2.1.10",
    "@types/passport-google-oauth20": "^2.0.3",
    "@types/passport-jwt": "^3.0.3",
    "@types/passport-local": "^1.0.33",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "babel-jest": "^26.0.1",
    "eslint": "^7.1.0",
    "jest": "^26.0.1",
    "node-dev": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "rollup": "^2.12.1",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.0",
    "ts-loader": "^7.0.5",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.9.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "ts",
      "tsx"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{ts,js}",
      "!**/node_modules/**",
      "!**/build/**",
      "!**/coverage/**"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "coverageReporters": [
      "text",
      "text-summary"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js|ts)x?$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/build/",
      "/coverage/"
    ]
  }
}
